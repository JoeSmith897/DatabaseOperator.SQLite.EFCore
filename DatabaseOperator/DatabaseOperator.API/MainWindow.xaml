<Window x:Class="DatabaseOperator.API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseOperator.API"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SQL Operator" Height="740" Width="605" ResizeMode="NoResize">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>


    <Grid>
        <!-- For change DataBases -->
        <Label Content="Operations for change DataBases:" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="189"/>
        <Button Command="{Binding AddObject}" Margin="10,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Add <LineBreak/> Object</TextBlock>
        </Button>
        <Button Command="{Binding UpdateObject}" Margin="80,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Update <LineBreak/> Object</TextBlock>
        </Button>
        <Button Command="{Binding DeleteObject}" Margin="150,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Delete <LineBreak/> Object</TextBlock>
        </Button>
        <Button Command="{Binding ReadDataBase}" Margin="220,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Read <LineBreak/> DataBases</TextBlock>
        </Button>

        <!-- For Search Information in DataBases -->
        <Label Content="Operations for search information in DataBases:" Margin="305,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="265"/>
        <Button Command="{Binding SearchByID}" Margin="305,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Search <LineBreak/> by ID</TextBlock>
        </Button>
        <Button Command="{Binding SearchByName}" Margin="375,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Search by <LineBreak/> Name</TextBlock>
        </Button>
        <Button Command="{Binding SearchByUserBalance}" Margin="445,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="60">
            <TextBlock TextAlignment="Center"> Search us.<LineBreak/>by Balance</TextBlock>
        </Button>
        <Button Command="{Binding SearchByProductQuantityOrPrice}" Margin="515,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="65">
            <TextBlock TextAlignment="Center"> Search pr. <LineBreak/> By Qt or Pr</TextBlock>
        </Button>

        <!-- For integration Databases by DataBase name-->
        <Button Command="{Binding IntegrationToUserDb}" Margin="10,95,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="270">
            <TextBlock TextAlignment="Center"> *Integrate to this data base</TextBlock>
        </Button>
        <Button Command="{Binding IntegrationToProductDb}" Margin="305,95,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="275">
            <TextBlock TextAlignment="Center"> *Integrate to this data base</TextBlock>
        </Button>

        <!-- For sort Databases -->
        <Button Command="{Binding SortUserDb}" Margin="10,150,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="270">
            <TextBlock TextAlignment="Center"> *Sorting this data base (full)</TextBlock>
        </Button>
        <Button Command="{Binding SortProductDb}" Margin="305,150,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="275">
            <TextBlock TextAlignment="Center"> *Sorting this data base (full)</TextBlock>
        </Button>
        <Button Command="{Binding PlaceAnOrder}" Margin="10,205,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="570">
            <TextBlock TextAlignment="Center"> *Place an order </TextBlock>
        </Button>

        <!-- ListViews -->
        <ListView ItemsSource="{Binding UserList}" Margin="10,270,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400" Width="270">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="User ID" Width="48" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="First Name" Width="75" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Second Name" Width="85" DisplayMemberBinding="{Binding SecondName}"/>
                    <GridViewColumn Header="Balance" Width="55" DisplayMemberBinding="{Binding Balance}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ItemsSource="{Binding ProductList}" Margin="305,270,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400" Width="273">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product ID" Width="65" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Product Name" Width="97" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Quantity" Width="55" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Price" Width="50" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>